{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "rootDir": "./src",               
      "baseUrl": "./src",                      
      "paths": {
        "@/*": ["*"]
      }
    },
    "lib": ["es2015"],
    "include": ["./src/**/*", "./src/**/*.json"],                           
    "ts-node": {
      "require": ["tsconfig-paths/register"]
    }  
  }