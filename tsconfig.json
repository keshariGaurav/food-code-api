{
    "compilerOptions": {
        "types": ["node", "express"],
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "outDir": "dist",
        "skipLibCheck": true
    },
    "include": ["src/**/*", "test/**/*","server.ts"],
    "exclude": ["test"]
}
